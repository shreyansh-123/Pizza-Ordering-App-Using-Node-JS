<html>
    <%- include('../_partials') %>
    <body>
        <%- include('../_header') %>
        <section class="cart py-16">
            <% if(session.cart) { %>
            <div class="order container mx-auto xl:w-1/2">
                <div class="flex items-center border-b border-gray-300 pb-4">
                    <img src="img/cart-black.png">
                    <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
                </div>
                <div class="pizza-list">
                    <% for(let data of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= data.item.image %>">
                        <div class="ml-4 flex-1">
                            <h1><%= data.item.name %></h1>
                            <span><%= data.item.size %></span>
                        </div>
                        <span class="flex-1"><%= data.qty %> Pcs</span>
                        <span class="total font-bold text-lg">₹ <%= data.item.price * data.qty %></span>
                    </div>
                    <% } %>
                </div>
                <hr>
                <div class="text-right py-4">
                    <div>
                        <span class="text-lg font-bold">Total Order</span>
                        <span class="amount text-2xl font-bold ml-2">₹ <%= session.cart.total %></span>
                    </div>
                    <div>
                    <form action="/order" method="post" class="mt-12">
                        <input type="number" name="phone" class="border border-gray-300 p-2 w-1/2 mb-4" placeholder="Phone Number">
                        <input type="text" name="address" class="border border-gray-300 p-2 w-1/2 mb-4" placeholder="Address">
                        <div>
                            <button class="btn-primary rounded-full px-6 py-2 text-white font-bold mt-6" type="submit">Order Now</button>
                        </div>
                    </form>
                    </div>
                    <!-- <a href="/" class="cursor-pointer btn-primary rounded-full px-6 py-2 text-white font-bold mt-6">Login to Continue</a> -->
                </div>
               
            </div>
            <% } else { %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
                    <p class="text-gray-500 text-lg mb-12">You probabaly have'nt order pizza yet. <br>
                    To order pizza go to main page.</p>
                    <img src="/img/empty-cart.png" class="w-2/5 mx-auto">
                    <a href="/" class="inline-block px-6 py-2 btn-primary rounded-full text-white font-bold mt-12">Go Back</a>
                </div>
            </div>
            <% } %>
        </section>
    </body>
</html>